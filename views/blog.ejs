<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>HOME PAGE</title>
</head>
<body>
<%- include('partials/nav') %> 
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img class="mt-3" src="<%= blog.coverImageUrl %>" width=500px>
        <pre  class="mt-4"><%=blog.body %></pre>
    </div>

    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageUrl %>" width=50px><%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-3">
        <h2>Comments <%= [(comments.length)] %></h2>
       <% if (locals.user) { %>
        <form label="mt-3" action="/blog/comment/<%= blog._id %>" method="post">
        <textarea class="form-control" placeholder="Leave a comment here" name="content" id="content"></textarea>
        <button  class="btn btn-sm btn-primary mt-2" type="submit">add</button>
        </form>
       <% } %>
    </div>          
    </div>


        <div class="container mt-3">
        <% comments.forEach(comment => { %>
            <div>
            <img src="<%= comment.createdBy.profileImageUrl %>" width=50px><%= comment.createdBy.fullName %> <pre><%= comment.content%></pre>
         </div>
            <% }) %>
<%- include('partials/script') %>
</body>
</html>